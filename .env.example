# Database
DATABASE_URL=postgresql://user:password@localhost:5432/textile_inspector
DB_POOL_MIN=2
DB_POOL_MAX=10

# Server
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Security
JWT_SECRET=your-secret-key-change-in-production
SESSION_SECRET=your-session-secret-change-in-production

# Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
MAX_BATCH_SIZE=100

# Inference
INFERENCE_TIMEOUT=3000
INFERENCE_SERVICE_URL=http://localhost:8000
MODEL_VERSION=v1.0.0

# Color tolerance
DEFAULT_DELTA_E_TOLERANCE=10

# TLS (production)
USE_HTTPS=false
TLS_CERT_PATH=
TLS_KEY_PATH=
